{
  "name": "blog-app",
  "private": true,
  "version": "0.0.1",
  "main": "app/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=development electron .",
    "view": "cross-env NODE_ENV=production electron .",
    "build:app":"electron-packager ./app blogApp --platform=win32 --icon=public/favicon1.ico --asar",
    "package": "vue-tsc --noEmit && vite build && electron-packager ./app blogApp --platform=win32 --icon=./public/favicon1.ico --asar",
    "app": "vue-tsc --noEmit && vite build && cross-env NODE_ENV=production electron-builder build"
  },
  "dependencies": {
    "@heroicons/vue": "^1.0.5",
    "@kangc/v-md-editor": "^2.3.13",
    "axios": "^0.25.0",
    "cos-js-sdk-v5": "^1.3.5",
    "echarts": "^5.3.0",
    "md-editor-v3": "^1.10.1",
    "pinia": "^2.0.11",
    "unplugin-vue-components": "^0.17.18",
    "vite-plugin-style-import": "^2.0.0",
    "vue": "^3.2.25",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@arco-design/web-vue": "^2.16.2",
    "@types/node": "^17.0.17",
    "@vitejs/plugin-vue": "^2.2.0",
    "cross-env": "^7.0.3",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13",
    "electron-packager": "^15.4.0",
    "sass": "^1.49.7",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vue-tsc": "^0.29.8"
  },
  "build": {
    "productName": "blog-app",
    "appId": "zzhblog.cn",
    "copyright": "zzh",
    "directories": {
      "output": "build"
    },
    "files": ["./dist/*", "./app/*"],
    "asar": true,
    "win": {
      "icon": "./public/logo.png"
    }
  }
}
